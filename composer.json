{
  "name": "arraypress/wp-date-utils",
  "version": "1.0.0",
  "description": "Lightweight WordPress date utilities with UTC storage, local display, and zero dependencies. Handles date ranges, business logic, subscriptions, and formatting.",
  "type": "library",
  "license": "GPL-2.0-or-later",
  "homepage": "https://github.com/arraypress/wp-date-utils",
  "authors": [
    {
      "name": "David Sherlock",
      "homepage": "https://arraypress.com/"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "psr-4": {
      "ArrayPress\\DateUtils\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/arraypress/wp-date-utils/issues",
    "source": "https://github.com/arraypress/wp-date-utils"
  },
  "keywords": [
    "wordpress",
    "wp",
    "date",
    "datetime",
    "timezone",
    "utc",
    "lightweight",
    "zero-dependencies",
    "date-range",
    "subscription",
    "billing",
    "business-days",
    "validation",
    "formatting",
    "arraypress"
  ]
}